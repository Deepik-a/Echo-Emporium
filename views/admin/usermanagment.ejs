<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-primary {
            background-color: #009CFF;
            border-color: #009CFF;
        }
        .btn-primary:hover {
            background-color: #007BFF;
            border-color: #007BFF;
        }
    </style>
</head>
<body>
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <h4 class="mb-4">User Management</h4>
            <table class="table table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
                                <% if (user.isBlocked) { %>
                                    <span class="badge bg-danger">Blocked</span>
                                <% } else { %>
                                    <span class="badge bg-success">Active</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (user.isBlocked) { %>
                                    <!-- <form action="/admin/unblock/<%= user._id %>" method="POST">
                                        <button class="btn btn-primary btn-sm">Unblock</button>
                                    </form> -->
                                    <a href="/admin/unblock/<%= user._id %>" class="btn btn-primary btn-sm">Unblock</a>

                                <% } else { %>
                                    <a href="/admin/block/<%= user._id %>" class="btn btn-primary btn-sm">Block</a>

                                    <!-- <a href="/admin/block/<%= user._id %>" class="btn btn-primary btn-sm">Block</a> -->


                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    