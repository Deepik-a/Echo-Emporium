<%- include('navbar') %>
<style>
    body{
        background-color: rgb(214, 239, 216);
    }
</style>



<section >
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="../../public/assets/logo.png" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form action="/login" method="post">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" name="email" id="form1Example13" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" name="password" id="form1Example23" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example23">Password</label>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-secondary btn-block w-100 mb-3"
                        style="background-color: rgb(80, 141, 78); color: white; padding: 10px 20px; border: none; border-radius: 5px;">
                        Login
                    </button>


<!-- Sign-up link -->
<div class="text-center mt-3">
    <p>Don't have an account? <a href="/signup">Sign up</a></p>
</div>


                    <div class="align-items-center my-4">
                        <p class="text-center fw-bold text-muted">OR</p>
                    </div>

                    <!-- Social login buttons -->
                    <a class="btn btn-primary btn-lg btn-block w-100 mb-3" style="background-color: #3b5998;" href="#!"
                        role="button">
                        <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                    </a>
                    <a class="btn btn-secondary btn-lg btn-block w-100" style="background-color: #80c380;" href="#!"
                        role="button">
                        <i class="fab fa-google me-2"></i>Continue with Google
                    </a>

                </form>
            </div>
        </div>
    </div>
</section>


