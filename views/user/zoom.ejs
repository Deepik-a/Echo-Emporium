<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zoomed Product Images</title>
    <link rel="stylesheet" href="/path/to/bootstrap.css">
    <style>
        .zoomed-img {
            width: 100%;
            max-width: 600px;
            margin-bottom: 20px;
            cursor: pointer;
        }

        .zoom-container {
            position: relative;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-success text-center"><%= product.name %> - Zoomed Images</h1>

        <div class="row">
            <% product.imgArray.forEach((img, index) => { %>
                <div class="col-md-4 zoom-container">
                    <img id="zoomedImg<%= index %>" src="<%= img %>" alt="Zoomed Image" class="zoomed-img img-thumbnail">
                </div>
            <% }) %>
        </div>

        <div class="text-center mt-4">
            <a href="/product/<%= product._id %>" class="btn btn-outline-secondary">Back to Product</a>
        </div>
    </div>

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include MediumZoom -->
    <script src="https://cdn.jsdelivr.net/npm/medium-zoom@1.0.6/dist/medium-zoom.min.js"></script>

    <!-- Initialize MediumZoom for each image -->
    <script>
        // Apply zoom to all images with the class 'zoomed-img'
        mediumZoom('.zoomed-img', {
            margin: 20,
            background: '#000'
        });
    </script>
</body>
</html>
