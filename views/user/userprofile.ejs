<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="row">
      <!-- Left Column: Profile and Saved Addresses -->
      <div class="col-md-4">
        <!-- User Profile Section -->
        <div class="card mb-3">
          <div class="card-body text-center">
            <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="User Avatar">
            <form action="/update-profile" method="post">
              <input type="text" class="form-control mb-2" name="name" id="name" required
              value="<%= userDetail.name %>" placeholder="Name"/>
              <input type="text" class="form-control mb-2" name="phone" id="phone" required
              value="<%= userDetail.phone %>" placeholder="Phone"/>
              <button class="btn btn-primary btn-sm">Edit Profile</button>
            </form>
          </div>
        </div>

        <!-- Saved Addresses Section -->
        <div class="card mb-3">
          <div class="card-header bg-primary text-white">
            Saved Addresses
          </div>
          <div class="list-group">
            <% if (userDetail.address && userDetail.address.length > 0) { %> <!-- Check if addresses exist -->
              <% userDetail.address.forEach((address, index) => { %> <!-- Access addresses correctly -->
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <span>Address <%= index + 1 %>:</span>
                  <span><%= address.building %>, <%= address.street %>, <%= address.city %></span>
                </div>
              <% }); %>
            <% } else { %>
              <p class="text-center m-3">No saved addresses.</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Right Column: Address Details (Beside Profile and Addresses) -->
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-header bg-primary text-white">
            Add Address
          </div>
          <div class="card-body">
            <form action="/add-address" method="post">
              <div class="mb-3">
                <label for="building" class="form-label">Building/Apartment</label>
                <input type="text" name="building" class="form-control" id="building" placeholder="Building Name" required>
              </div>
              <div class="mb-3">
                <label for="street" class="form-label">Street</label>
                <input type="text" name="street" class="form-control" id="street" placeholder="Street Name" required>
              </div>
              <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" name="city" class="form-control" id="city" placeholder="City" required>
              </div>
              <div class="mb-3">
                <label for="state" class="form-label">State</label>
                <input type="text" name="state" class="form-control" id="state" placeholder="State" required>
              </div>
              <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="country" class="form-control" id="country" placeholder="Country" required>
              </div>
              <div class="mb-3">
                <label for="pincode" class="form-label">Pincode</label>
                <input type="text" name="pincode" class="form-control" id="pincode" placeholder="Pincode" required>
              </div>
              <div class="mb-3">
                <label for="phonenumber" class="form-label">Phone Number</label>
                <input type="text" name="phone" class="form-control" id="phonenumber" placeholder="Phone Number" required>
              </div>
              <div class="mb-3">
                <label for="landmark" class="form-label">Landmark</label>
                <input type="text" name="landmark" class="form-control" id="landmark" placeholder="Landmark">
              </div>
              <button type="submit" class="btn btn-success">Add Address</button>
            </form>
          </div>
        </div>

    <!-- Saved Addresses Section Below Add Address Form -->
<div class="card mb-3">
  <div class="card-header bg-primary text-white">
    Your Addresses
  </div>
  <div class="list-group">
    <% if (userDetail.address && userDetail.address.length > 0) { %> <!-- Check if addresses exist -->
      <% userDetail.address.forEach((address, index) => { %> <!-- Access addresses correctly -->
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <span>Address <%= index + 1 %>:</span>
            <span><%= address.building %>, <%= address.street %>, <%= address.city %></span>
          </div>
          <div>
           
        <!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editAddressModalLabel">Edit Address</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form  action="/edit-address" method="post">
          <input type="text" name="building" class="form-control mb-2" placeholder="Building" required>
          <input type="text" name="street" class="form-control mb-2" placeholder="Street" required>
          <input type="text" name="city" class="form-control mb-2" placeholder="City" required>
          <input type="text" name="pincode" class="form-control mb-2" placeholder="Pincode" required>
          <input type="text" name="landmark" class="form-control mb-2" placeholder="Landmark">
          <input type="text" name="state" class="form-control mb-2" placeholder="State" required>
          <input type="text" name="country" class="form-control mb-2" placeholder="Country" required>
          <button type="submit" class="btn btn-success">Update Address</button>
    
      </div>
    </div>
  </div>
</div>

<!-- Edit Button -->
<div class="btn btn-warning btn-sm me-2" 
   data-bs-toggle="modal" 
   data-bs-target="#editAddressModal" 
   onclick="populateEditForm('<%= index %>', '<%= address.building %>', '<%= address.street %>', '<%= address.city %>', '<%= address.phone %>', '<%= address.pincode %>', '<%= address.landmark %>', '<%= address.state %>', '<%= address.country %>')">Edit</div>
  </form>

            
            <form action="/delete-address/<%= index %>" method="post" style="display:inline;">
              <input type="hidden" name="addressIndex" value="<%= index %>">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-center m-3">No saved addresses.</p>
    <% } %>
  </div>
</div>


  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function populateEditForm(index, building, street, city, phone, pincode, landmark, state, country) {
      // Set the form action to the edit address route with the selected index
      document.getElementById('editAddressForm').action = `/edit-address/${index}`;
  
      // Populate the input fields with the current address details
      document.querySelector('input[name="building"]').value = building;
      document.querySelector('input[name="street"]').value = street;
      document.querySelector('input[name="city"]').value = city;
      document.querySelector('input[name="phone"]').value = phone;
      document.querySelector('input[name="pincode"]').value = pincode;
      document.querySelector('input[name="landmark"]').value = landmark;
      document.querySelector('input[name="state"]').value = state;
      document.querySelector('input[name="country"]').value = country;
    }
  </script>